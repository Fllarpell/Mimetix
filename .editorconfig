# .editorconfig for Prometheus Intelligence Platform
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.go]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.ts]
indent_size = 2
[*.js]
indent_size = 2
[*.json]
indent_size = 2
[*.yaml]
indent_size = 2
[*.yml]
indent_size = 2
[*.proto]
indent_size = 2
[*.bazel]
indent_size = 2
[*.bzl]
indent_size = 2
[*.sh]
indent_size = 2
[Dockerfile]
indent_size = 2
[*.html]
indent_size = 2
[*.css]
indent_size = 2
[*.scss]
indent_size = 2
[*.toml]
indent_size = 2
