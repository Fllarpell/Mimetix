[MASTER]
ignore=build,dist,.venv,venv,node_modules,vendor

[MESSAGES CONTROL]
disable=C0114,C0115,C0116,R0903,R0913,R0914,R0915,W0511

[FORMAT]
max-line-length=100
indent-string='    '

[DESIGN]
max-args=7
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=10
max-public-methods=20 