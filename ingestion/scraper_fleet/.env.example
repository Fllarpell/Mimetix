# === S3/MinIO ===
S3_BUCKET=your-s3-bucket
S3_PREFIX=reels/
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=us-east-1
# S3_ENDPOINT_URL=http://localhost:9000  # для MinIO

# === GCS ===
GCS_BUCKET=your-gcs-bucket
GCS_PREFIX=reels/
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/gcs-key.json

# === DWH (PostgreSQL/ClickHouse) ===
DWH_DSN=postgresql://user:password@localhost:5432/dbname
DWH_TABLE=reels

# === SQLite ===
SQLITE_PATH=reels.db

# === Scraper ===
HASHTAG=reels
REELS_LIMIT=10
PLAYWRIGHT_HEADLESS=True

# === Monitoring ===
SENTRY_DSN=
PROMETHEUS_PORT=8000

# === Прочее ===
# LOG_LEVEL=INFO
